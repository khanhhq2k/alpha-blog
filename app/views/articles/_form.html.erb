<%= render 'share/errors', obj: @article %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |a|%>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :title %></br>
        </div>
        <div class="col-sm-7" >
          <%= a.text_field :title , class: "form-control", placeholder:"Article Name" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :description %></br>
        </div>
        <div class="col-sm-7" >
          <%= a.text_area :description , class: "form-control", rows: 8, placeholder:"Details" %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-3 col-sm-10">
            <%= a.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <%= cb.label(class: 'checkbox-inline input_checkbox') {cb.check_box(class: 'checkbox') + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= a.submit class: "btn btn-primary btn-lg"%>
        </div>
      </div>
      <div class ="col-xs-4 col-xs-offset-2">
        [<%= link_to "Articles list", articles_path %>]
      </div>
      
    <% end %>
  </div>
</div>

