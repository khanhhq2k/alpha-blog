<h1 align="center">Listing all categories</h1>
<div align = "center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <div class= "row">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="well well-lg">
          <div class="article-title">
            <%= link_to category.name, category_path(category) %>
          </div>
          <small><%= pluralize(category.articles.count, "article") %></small>
          <% if logged_in? && current_user.admin? %>
            <div class="article-actions">
              <%= link_to "Edit", edit_category_path(category), class:"btn btn-xs btn-primary" %>
              <%= link_to "Delete", category_path(category), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-xs btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>  
  <% end %>
  <%= will_paginate %>
</div>
