<h1 align="center">Create new category</h1>
<%= render 'share/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |c|%>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= c.label :name %></br>
    </div>
    <div class="col-sm-7" >
      <%= c.text_field :name , class: "form-control", placeholder:"Enter category name", autofocus: true %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= c.submit(@category.new_record? ? "Create" : "Update", class: "btn btn-primary btn-lg")%>
    </div>
  </div>
  <div class ="col-xs-4 col-xs-offset-2">
    [<%= link_to "Articles list", articles_path %>]
  </div>
<% end %>
