<%= render 'share/errors', obj: @user %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |u|%>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label :username %></br>
        </div>
        <div class="col-sm-7" >
          <%= u.text_field :username , class: "form-control", placeholder:"Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label :email %></br>
        </div>
        <div class="col-sm-7" >
          <%= u.email_field :email , class: "form-control", placeholder:"Enter email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label :password %></br>
        </div>
        <div class="col-sm-7" >
          <%= u.password_field :password , class: "form-control", placeholder:"Enter password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= u.submit(@user.new_record? ? "Sign up" : "Update", class: "btn btn-primary btn-lg")%>
        </div>
      </div>
      <div class ="col-xs-4 col-xs-offset-2">
        [<%= link_to "Articles list", articles_path %>]
      </div>
    <% end %>
  </div>
</div>